---
import { cn } from '../lib/utils'

interface Props {
  src: string
  width: string
  height: string
  alt: string
  class?: string
}
---

<img
  loading="lazy"
  alt={Astro.props.alt}
  src={Astro.props.src}
  class={cn('object-cover', Astro.props.class)}
  style={{
    width:
      Astro.props.width === 'auto' || Astro.props.width.includes('%')
        ? Astro.props.width
        : Astro.props.width + 'px',
    height:
      Astro.props.height === 'auto' || Astro.props.height.includes('%')
        ? Astro.props.height
        : Astro.props.height + 'px',
  }}
/>
